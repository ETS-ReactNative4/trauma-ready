<div id="hospital" class="type" style="display: none;"></div>
<h3><a class="btn btn-secondary" href="/hospital"><i class="fa fa-plus"></i> Create New</a> Hospital List</h3>
<a class="btn btn-primary" href="/dashboard" role="button">Return to Dashboard</a>

<table class="table table-striped mainTable">
    <thead>
    <tr>
        <th></th>
        <th>Id</th>
        <th>Name</th>
        <th>RAC</th>
        <th>Trauma Level</th>
        <th>Services</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Notes</th>
    </tr>
    </thead>
    <tbody>
    {{#each list}}
        <tr class="dataRow">
            <td>
              <button class="far fa-save button-table" style="display: none;" onclick="saveRow($(this).parent().parent());"></button>
              <button class="fa fa-edit button-table" style="display: inherit;"onclick="editRow($(this).parent().parent());"></button>
              <button class="fas fa-ban button-table" style="display: none;" onclick="cancelEdit($(this).parent().parent());"></button>
              <button class="fas fa-trash-alt button-table" style="display: inherit;" onclick="deleteRow($(this).parent().parent());"></button>
            </td>
            <td>{{this.hid}}</td>
            <td class="mutable">{{this.name}}</td>
            <td class="mutable">{{this.rac}}</td>
            <td class="mutable">{{this.traumaLevel}}</td>
            <td>
              <div class="ul-container">
                <ul>
                  {{#each this.services}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              </div>
            </td>
            <td class="mutable">{{this.address}}</td>
            <td>
              <div class="ul-container">
                <ul>
                  {{#each this.phoneDirectory}}
                    <li>{{this.connection}}:
                      {{this.number}}</li>
                  {{/each}}
                </ul>
              </div>
            </td>
            <td class="mutable">{{this.email}}</td>
            <td class="mutable large">{{this.notes}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
<div class="newEntry" onclick="createRow();">Create New Object</div>
