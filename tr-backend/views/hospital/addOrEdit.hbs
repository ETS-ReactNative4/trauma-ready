<h3>{{viewTitle}}</h3>

<form  action="/hospital" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{hospital._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="hospitalName" placeholder="Hospital Name" value="{{hospitalName}}">
        <div class="text=danger">
            {{hospital.hospitalNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{hospital.address}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{hospital.email}}">
        <div class="text=danger">
            {{hospital.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Phone</label>
            <input type="text" class="form-control" name="phone" placeholder="Phone Number" value="{{hospital.phone}}">
        </div>
        <div class="form-group col-md-6">
            <label>Trauma Region</label>
            <input type="text" class="form-control" name="traumaRegion" placeholder="Trauma Region" value="{{hospital.traumaRegion}}">
        </div>
        <div class="form-group col-md-6">
            <label>Trauma Level</label>
            <select name="traumaLevel">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="Acute Care">Acute Care</option>
                <option value="Other">Other</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/hospital/list"><i class="fa fa-list-alt"></i> View All</a>

    </div>
</form>